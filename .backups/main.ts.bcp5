async function loadTree00(): Promise<ImageWithDepth<Uint16Array>> {
  return ImageWithDepth.fromImageData(
    await imageUrlToImageData(new URL('../assets/tree-00.png?url', import.meta.url)),
    Uint16Array,
  );
}

